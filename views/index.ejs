<%- include('partials/header.ejs') %>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script>
        function insertToCart(name, price){
                $.ajax({
                      method: "POST",
                         url: "/addToCart",
                    dataType: "JSON",
                        data: { "prodName":name,
                                "prodPrice":price},
                     success: function(result,status) {
                        alert(name + " has been added to your cart!");
                    }
                    
                });//ajax
        
        } //document.ready
        
        </script>
</head>

          <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h2 class="my-4">Kitten Mittens</h2>
        <h4 class="text-primary">Protect the beans!</h4><br>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div class="row">
          
          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="https://images.footlocker.com/is/image/EBFL2/T3745046_a1?wid=900&hei=350&fmt=png-alpha" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://images.footlocker.com/is/image/EBFL2/PS10110T_a1?wid=940&amp;hei=350&amp;fmt=png-alpha" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://images.footlocker.com/is/image/EBFL2/EE8799_a1?wid=940&amp;hei=350&amp;fmt=png-alpha" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        
          <br>
          
          <% prodList.forEach(function(product){  %>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <td><img class="rounded" src="<%=product.image%>" width="200px"/></td>
              <div class="card-body">
                <h4 class="card-title text-primary">
                  <td><%= product.name %></td>
                </h4>$
                 <td><%= product.price %></td><br><br>
                 <td class="align-middle"><button class="btn btn-primary" onclick="insertToCart('<%=product.name%>','<%=product.price%>')">Add to Cart</button></td>
            </div>
          </div>
          </div>
        <% }) %> 
        
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
        
    </body>
</html>